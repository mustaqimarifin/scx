{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "declaration": true,
    "importHelpers": true,
    "declarationDir": "dist",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": ["src", "bin", "bin"],
  "exclude": ["**/*.test.ts", "node_modules", "test/**", ".history/**"]
}
